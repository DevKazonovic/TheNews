<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_bg_rounded_top_corners_12"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemSaveStory"
        style="@style/Widget.App.MenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewSaveStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/ic_bookmark"
            />

        <TextView
            android:id="@+id/textViewSaveStory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_save_for_later"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemShareStory"
        style="@style/Widget.App.MenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewShareStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_share"
            android:layout_marginEnd="16dp"
            />

        <TextView
                android:id="@+id/textViewShareStory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/label_save_for_later"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemOpenSource"
        style="@style/Widget.App.MenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewOpenSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_open_in_new"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:id="@+id/textViewOpenSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_save_for_later"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />


    </LinearLayout>

</LinearLayout>